{
	"compileOnSave": false,
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"alwaysStrict": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"importHelpers": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		//"declaration": true,
		"stripInternal": true,
		"jsx": "react",
		"sourceMap": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"target": "es6",
		"lib": ["dom", "es5", "ES2015", "es2015.core", "es2015.collection", "es2015.iterable", "es2015.symbol"],
		"outDir": "dist",
		"types": ["reflect-metadata", "jest"]
	}
}
